<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/trademark_name_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商标名称："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/trademark_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_of_application_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请日期："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/time_of_application"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/petitioner_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请人名称："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/petitioner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/registered_address_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请人地址："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/registered_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/use_time_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="专用权期限："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/use_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trademark_type_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="国际分类："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/trademark_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/similar_id_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="类似群："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/similar_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trademark_description_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="简要描述："
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/trademark_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_view_trademark_attribute"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商标图案："
                        android:textSize="18dp"/>

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"/>

                </LinearLayout>



            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>