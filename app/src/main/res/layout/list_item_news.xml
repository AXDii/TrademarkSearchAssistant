<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/ripple_bg"
    android:focusable="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="86dp">

            <TextView
                android:id="@+id/list_item_news_newsTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="NULL"
                android:textSize="16dp"
                android:textColor="#333"
                android:layout_marginEnd="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/list_item_news_from"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="NULL"/>

                <TextView
                    android:id="@+id/list_item_news_time"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="NULL"/>

            </LinearLayout>




        </LinearLayout>


        <ImageView
            android:id="@+id/list_item_news_image"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="86dp"
            android:src="@drawable/pear"
            android:contentDescription="@string/first_img" />


    </LinearLayout>
    <include layout="@layout/item_line"/>



</LinearLayout>