<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <com.example.newproject.client.ui.LineWaveVoiceView
            android:id="@+id/horvoiceview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:voiceLineColor="@color/horvoice_text_color"
            app:voiceTextColor="@color/color_666666"
            app:voiceTextSize="14dp"
            app:voiceLineWidth="3dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="0"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!--<TextView-->
            <!--android:layout_width="0.5dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#dcdcdc" />-->

        <!--<TextView-->
            <!--android:id="@+id/dialog_confirm"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="38dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center"-->
            <!--android:text="确定"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="14sp" />-->
    </LinearLayout>
</LinearLayout>